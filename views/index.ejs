  <body>
   <header>
    
      <h1>DacMonalds</h1>
     
      <!-- <button type ="button" id="header-button"><i class="fas fa-angle-double-down"></i></button>
     
      <button type="button" id="header-track-button"></button> -->
    <div class="logout-button-div">
      <% if (!(user)) {%>
      <form action="/api/login" method="POST">
        <button type="submit" class="btn btn-danger log-button">Login</button>
      </form>
      <%} else {%>
      <form action="/api/logout" method="POST">
        <button type="submit" class="btn btn-danger log-button">Logout</button>
      </form>
    </div>
      <% } %>
      
    </header>

  <div id = "menu-container" >
   
   
      <div id="shopping-div">
        <!-- <button type="button" class="hide-cart btn">v</button> -->

        <table id="shopping-cart">
          <thead>
            <tr>
              <th>Item Name</th>
              <th>Price</th>
              <th>Calories</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody id="item-body"></tbody>
        </table>
        <form action='/api/checkout' method="POST" id="checkout-form">
          <button type ="button submit" class="prevention checkout-button btn btn-warning" >Checkout</button>
        </form>
      </div>

      <div id="order_div">
        <div id="order_message"></div>
        <form action='/api/orders' method="GET" id="track-form">
          <button type="button submit" class="track-order-button btn btn-success">Track</button>
        </form>
      </div>
   </div>
  </div>

    <footer>
      <button type="button" id="footer-cart-button" class="btn btn-danger footer-button">Cart</button>
      <button type ="button" id="footer-track-button"><i class="fas fa-clock" aria-hidden="true"></i></button>
    </footer>
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
